<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.budget.controller.MainController">
   <top>
      <!-- Header Section -->
      <VBox>
         <HBox alignment="CENTER_LEFT" spacing="20.0">
            <Label text="Budget Manager">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="currentDateLabel" text="Today: ">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </HBox>
         
         <!-- Navigation Tabs -->
         <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
            <Tab text="Dashboard">
               <ScrollPane fitToWidth="true">
                  <VBox>
                     <Label text="Dashboard View" />
                     <!-- Simple dashboard content -->
                     <GridPane hgap="20" vgap="20">
                        <Label text="Total Income:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Label fx:id="totalIncomeValue" text="$0.00" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Label text="Total Expenses:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Label fx:id="totalExpensesValue" text="$0.00" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <Label text="Net Income:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <Label fx:id="netIncomeValue" text="$0.00" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                     </GridPane>
                  </VBox>
               </ScrollPane>
            </Tab>
            
            <Tab text="Expenses">
               <ScrollPane fitToWidth="true">
                  <VBox spacing="10">
                     <Label text="Expense Management" />
                     <Button text="Add Expense" />
                     <TableView>
                        <columns>
                           <TableColumn text="Date" prefWidth="100" />
                           <TableColumn text="Category" prefWidth="150" />
                           <TableColumn text="Description" prefWidth="200" />
                           <TableColumn text="Amount" prefWidth="100" />
                        </columns>
                     </TableView>
                  </VBox>
               </ScrollPane>
            </Tab>
            
            <Tab text="Income">
               <ScrollPane fitToWidth="true">
                  <VBox spacing="10">
                     <Label text="Income Management" />
                     <Button text="Add Income" />
                     <TableView>
                        <columns>
                           <TableColumn text="Date" prefWidth="100" />
                           <TableColumn text="Category" prefWidth="150" />
                           <TableColumn text="Description" prefWidth="200" />
                           <TableColumn text="Amount" prefWidth="100" />
                        </columns>
                     </TableView>
                  </VBox>
               </ScrollPane>
            </Tab>
            
            <Tab text="Budgets">
               <ScrollPane fitToWidth="true">
                  <VBox spacing="10">
                     <Label text="Budget Management" />
                     <Button text="Create Budget" />
                     <TableView>
                        <columns>
                           <TableColumn text="Category" prefWidth="150" />
                           <TableColumn text="Budget" prefWidth="100" />
                           <TableColumn text="Spent" prefWidth="100" />
                           <TableColumn text="Remaining" prefWidth="100" />
                        </columns>
                     </TableView>
                  </VBox>
               </ScrollPane>
            </Tab>
         </TabPane>
         
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   
   <bottom>
      <!-- Status Bar -->
      <HBox alignment="CENTER_LEFT">
         <Label fx:id="statusLabel" text="Ready">
            <font>
               <Font size="12.0" />
            </font>
         </Label>
         <Region HBox.hgrow="ALWAYS" />
         <Label fx:id="totalIncomeLabel" text="Total Income: $0.00">
            <font>
               <Font size="12.0" />
            </font>
         </Label>
         <Separator orientation="VERTICAL" />
         <Label fx:id="totalExpensesLabel" text="Total Expenses: $0.00">
            <font>
               <Font size="12.0" />
            </font>
         </Label>
         <Separator orientation="VERTICAL" />
         <Label fx:id="netIncomeLabel" text="Net: $0.00">
            <font>
               <Font size="12.0" />
            </font>
         </Label>
         
         <padding>
            <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>