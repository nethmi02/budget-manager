<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.budget.controller.MainController">
   <top>
      <!-- Header Section -->
      <VBox styleClass="header">
         <HBox alignment="CENTER_LEFT" spacing="20.0">
            <Label styleClass="app-title" text="Budget Manager">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="currentDateLabel" styleClass="date-label" text="Today: ">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </HBox>
         
         <!-- Navigation Tabs -->
         <TabPane fx:id="mainTabPane" styleClass="main-tabs" tabClosingPolicy="UNAVAILABLE">
            <Tab styleClass="nav-tab" text="Dashboard">
               <ScrollPane fitToWidth="true">
                  <fx:include source="dashboard-view.fxml" />
               </ScrollPane>
            </Tab>
            <Tab styleClass="nav-tab" text="Expenses">
               <ScrollPane fitToWidth="true">
                  <fx:include source="expense-view.fxml" />
               </ScrollPane>
            </Tab>
            <Tab styleClass="nav-tab" text="Income">
               <ScrollPane fitToWidth="true">
                  <fx:include source="income-view.fxml" />
               </ScrollPane>
            </Tab>
            <Tab styleClass="nav-tab" text="Budgets">
               <ScrollPane fitToWidth="true">
                  <fx:include source="budget-view.fxml" />
               </ScrollPane>
            </Tab>
            <Tab styleClass="nav-tab" text="Charts">
               <ScrollPane fitToWidth="true">
                  <fx:include source="charts-view.fxml" />
               </ScrollPane>
            </Tab>
         </TabPane>
         
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   
   <bottom>
      <!-- Status Bar -->
      <HBox alignment="CENTER_LEFT" styleClass="status-bar">
         <Label fx:id="statusLabel" text="Ready">
            <font>
               <Font size="12.0" />
            </font>
         </Label>
         <Region HBox.hgrow="ALWAYS" />
         <Label fx:id="totalIncomeLabel" text="Total Income: $0.00">
            <font>
               <Font size="12.0" />
            </font>
         </Label>
         <Separator orientation="VERTICAL" />
         <Label fx:id="totalExpensesLabel" text="Total Expenses: $0.00">
            <font>
               <Font size="12.0" />
            </font>
         </Label>
         <Separator orientation="VERTICAL" />
         <Label fx:id="netIncomeLabel" text="Net: $0.00">
            <font>
               <Font size="12.0" />
            </font>
         </Label>
         
         <padding>
            <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
